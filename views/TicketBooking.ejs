<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  <link rel="stylesheet" href="css/style.css">
  <script src="https://kit.fontawesome.com/592bc71e60.js" crossorigin="anonymous"></script>
  <title>TicketBooking</title>
</head>

<body>
  <nav class="navbar bg-dark " data-bs-theme="dark">
    <div class="title">
      <i class="logo fa-solid fa-train fa-2x"></i>
      <a class="navbar-brand navbar-title h1" href=""><span class="h3">Book<span>Your</span>Train</span></a>
    </div>
  </nav>
  <!-- background-image -->
  <section class="TBTitleBackGround" style="background-image: url(images/platform\ 4.jpg);">
    <div class="row">
      <div class="col-md-4 block">
        <h2><%=source%></h2>
      </div>
      <div class="col-md-4">
        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor"
          class="bi bi-arrow-left-right" viewBox="0 0 16 16">
          <path fill-rule="evenodd"
            d="M1 11.5a.5.5 0 0 0 .5.5h11.793l-3.147 3.146a.5.5 0 0 0 .708.708l4-4a.5.5 0 0 0 0-.708l-4-4a.5.5 0 0 0-.708.708L13.293 11H1.5a.5.5 0 0 0-.5.5zm14-7a.5.5 0 0 1-.5.5H2.707l3.147 3.146a.5.5 0 1 1-.708.708l-4-4a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 4H14.5a.5.5 0 0 1 .5.5z" />
        </svg>
      </div>
      <div class="col-md-4 block">
        <h2><%=Destination%></h2>
      </div>
    </div>
  </section>

  <!-- ticket -->
  <%for(let i=0;i<train.length;i++){%>
  <form action="/TicketBill" method="post">
  <section class="ticket">
    <div class="card card-ticket">
      <div class="card-header">
        <h3 name="trainname"><%=train[i].train%></h3>
      </div>
      <div class="card-body">
        <h4 class="card-title"><%=train[i].station%></h4>
        <div class="row">
          <div class="col-md-4">
              <h5><%=source%></h5>
              <p><%=train[i].sourceTime%></p>
          </div>
          <div class="col-md-2">

          </div>
          <div class="col-md-4">
            <h5><%=Destination%></h5>
            <p><%=train[i].destinationtime%></p>
          </div>
        </div>
        <input type="hidden"  name="info" value="<%=train[i].station%>,<%=train[i].ds%>,<%=train[i].sourceTime%>,<%=train[i].destinationtime%>">
        

        <button type="submit" class="btn btn-danger">Book Ticket</button>
      </div>
    </div>
  </section>
</form>
<%}%>
  <!-- footer -->

  <footer class="bg-dark text-light py-3 footer">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h4>About Us</h4>
          <p>We are a leading train ticket booking platform, offering a seamless experience for travelers.</p>
        </div>
        <div class="col-md-3">
          <h4>Quick Links</h4>
          <ul class="list-unstyled">
            <li><a href="#">Home</a></li>
            <li><a href="#">About Us</a></li>
            <li><a href="#">Contact Us</a></li>
          </ul>
        </div>
        <div class="col-md-3">
          <h4>Contact Us</h4>
          <p>123 Main Street<br>Anytown, USA 12345<br>Email: info@bookyourtrain.com<br>Phone: 555-555-5555</p>
        </div>
      </div>
      <hr>
      <div class="text-center">
        <p>&copy; 2023 BookYourTrain. All Rights Reserved.</p>
      </div>
    </div>
  </footer>
  
</body>

</html>